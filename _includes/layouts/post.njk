---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="post-wrapper">
  <div class="post-body">
    <div class="post-header">
      <h1>{{ title }}</h1>
      <h4>{{ date | htmlDateString }}<h4>
    </div>
    <article>
      {{ content | safe }}
    </article>
  </div>
</div>

<p><a href="{{ '/' | url }}">← Home</a></p>
